
<div class="p-5 mb-4 bg-light rounded-3">
      <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold"><%=  @friend.name %></h1>
        <p class="col-md-8 fs-6 text-muted"><%=  @friend.address %> | <%=  @friend.hobbies %></p>
        <%= link_to "Edit this friend", edit_friend_path(@friend), class:'btn btn-secondary btn-sm', style:"margin-top: 30px" %>
        <%= link_to "Back to friends", friends_path, class:'btn btn-dark btn-sm', style:"margin-top: 30px" %>

        <%= button_to "Destroy this friend", @friend, class:'btn btn-danger btn-sm', style:"margin-top: 20px", method: :delete %>
      </div>
    </div>